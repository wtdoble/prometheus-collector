{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "principalId": {
      "type": "string",
      "defaultValue": "529f7b78-240a-4dd1-baf5-f3e500d8e2fb",
      "metadata": {
        "description": "The object ID (PrincipalId) of the managed identity."
      }
    },
    "subscriptionId": {
      "type": "string",
      "defaultValue": "84ca48fe-c942-42e5-b492-d56681d058fa"
    },
    "resourceGroupName": {
      "type": "string",
      "defaultValue": "wtd-dev"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2022-04-01",
      "name": "[guid(parameters('principalId'), 'Contributor', parameters('resourceGroupName'))]",
      "properties": {
        "roleDefinitionId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', 'b24988ac-6180-42a0-ab88-20f7382dd24c')]", // Contributor
        "principalId": "[parameters('principalId')]",
        "scope": "[format('/subscriptions/{0}/resourceGroups/{1}', parameters('subscriptionId'), parameters('resourceGroupName'))]"
      }
    },
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2022-04-01",
      "name": "[guid(parameters('principalId'), 'NetworkContributor', parameters('resourceGroupName'))]",
      "properties": {
        "roleDefinitionId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', '4d97b98b-1d4f-4787-a291-c67834d212e7')]", // Network Contributor
        "principalId": "[parameters('principalId')]",
        "scope": "[format('/subscriptions/{0}/resourceGroups/{1}', parameters('subscriptionId'), parameters('resourceGroupName'))]"
      }
    },
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2022-04-01",
      "name": "[guid(parameters('principalId'), 'ManagedIdentityOperator', parameters('resourceGroupName'))]",
      "properties": {
        "roleDefinitionId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', 'f1a07417-d97a-45cb-824c-7a7467783830')]", // Managed Identity Operator
        "principalId": "[parameters('principalId')]",
        "scope": "[format('/subscriptions/{0}/resourceGroups/{1}', parameters('subscriptionId'), parameters('resourceGroupName'))]"
      }
    },
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2022-04-01",
      "name": "[guid(parameters('principalId'), 'StorageBlobDataOwner', parameters('resourceGroupName'))]",
      "properties": {
        "roleDefinitionId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', 'ba92f5b4-2d11-453d-a403-e96b0029c9fe')]", // Storage Blob Data Owner
        "principalId": "[parameters('principalId')]",
        "scope": "[format('/subscriptions/{0}/resourceGroups/{1}', parameters('subscriptionId'), parameters('resourceGroupName'))]"
      }
    }
  ]
}